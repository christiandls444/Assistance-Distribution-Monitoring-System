<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cc99a2"
    android:orientation="vertical"
    android:layout_height="wrap_content">





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/profileIM"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/profile"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TittleInformation"
                android:text="Information"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-black"
                android:layout_toRightOf="@+id/profileIM"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idnumlist"
                android:text="ID NUM"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/TittleInformation"
                android:layout_toRightOf="@+id/profileIM"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstName"
            android:text="FirstName"
            android:textStyle="bold"
            android:layout_below="@id/idnumlist"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/profileIM"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/middleName"
            android:text="MiddleName:"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/firstName"
            android:layout_toRightOf="@+id/profileIM"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:id="@+id/lastname"
            android:text="LastName:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/profileIM"
            android:textColor="#000000"
            android:layout_below="@+id/middleName"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Contact"
            android:text="Contact number:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/profileIM"
            android:fontFamily="sans-serif-light"
            android:textColor="#000000"
            android:layout_below="@+id/lastname"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/EmailAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/Contact"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/profileIM"
            android:text="Email:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Sex"
            android:text="Gender:"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/profileIM"
            android:textColor="#000000"
            android:layout_below="@+id/EmailAdd"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Status"
            android:text="Status:"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/profileIM"
            android:textColor="#000000"
            android:layout_below="@+id/Sex"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Type"
            android:text="Type of Assistance:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/profileIM"
            android:textColor="#000000"
            android:layout_below="@+id/Status"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            />

        <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Type"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/profileIM"
            android:text="Amount:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="Date:"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/profileIM"
            android:textColor="#000000"
            android:layout_below="@+id/amount"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sponsor"
            android:text="Sponsor by:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_below="@+id/date"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_toRightOf="@+id/profileIM"

            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Tittlenoted_by"
                android:text="Noted By:"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:textColor="#000000"
                android:layout_below="@+id/sponsor"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-black"
                android:layout_toRightOf="@+id/profileIM"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LISTnoted_by"
                android:text="Brgy Officials"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="0dp"
                android:textColor="#000000"
                android:layout_below="@+id/Tittlenoted_by"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@+id/profileIM"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LISTNotedDate"
                android:text="Date"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@+id/LISTnoted_by"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@+id/profileIM"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LISTTime"
                android:text="Time"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@+id/LISTNotedDate"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@+id/profileIM"
                />
















        </RelativeLayout>



    </androidx.cardview.widget.CardView>


    </GridLayout>


