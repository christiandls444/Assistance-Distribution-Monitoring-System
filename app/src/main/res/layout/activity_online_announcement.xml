<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recta"
    tools:context=".OnlineAnnouncement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/userinterfacewhite"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="30sp"
                android:layout_width="270dp"
                android:layout_height="80dp"
                android:textColor="@color/black"
                android:text="Announcement"
                android:paddingTop="22dp"
                android:paddingStart="14dp"
                android:fontFamily="sans-serif-light"

                />
<ImageView
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:id="@+id/ListAnnounce"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/post"
    />

        </LinearLayout>
        <EditText
            android:id="@+id/OLPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:hint="Tittle"
            android:textSize="20sp"
            android:background="@drawable/stroke3"
            android:paddingStart="20dp"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

               <EditText
                    android:id="@+id/OLMessageAnnounce"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:gravity="start"
                    android:hint="Message"
                   android:paddingBottom="20dp"
                    android:textSize="20sp"
                    android:background="@drawable/stroke3"
                    android:paddingStart="20dp"
                    />
            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/OLDatePostedAnnounceAnnounce"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:hint="Date Post"
            android:paddingBottom="20dp"
            android:textSize="20sp"
            android:background="@drawable/stroke3"
            />
        <TextView
            android:id="@+id/OLTimePostedAnnounceAnnounce"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:gravity="center"
            android:hint="Time Post"
            android:paddingBottom="20dp"
            android:textSize="20sp"
            android:background="@drawable/stroke3"
            />
        </LinearLayout>

               <ImageView
                   android:id="@+id/sendAnnounce"
                   android:layout_width="match_parent"
                   android:layout_height="110dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_marginEnd="20dp"
                   android:src="@drawable/announcement"
                   android:layout_marginStart="20dp"/>

















    </LinearLayout>

</ScrollView>