<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colordes2"
    tools:context=".admin_and_user">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colordes"
    >
    <RelativeLayout
        android:id="@+id/We_care_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/monitorindes">

        <ImageView
            android:id="@+id/user_admin_img"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="140dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/handshake" />
        <TextView
            android:layout_below="@id/user_admin_img"
            android:layout_marginStart="140dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="We Care"
            android:textColor="#ffffff"
            android:textSize="37sp"
            android:fontFamily="@font/baloo_chettan"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="0dp">

            <ImageButton
                android:id="@+id/admin"
                android:layout_width="172dp"
                android:layout_height="155dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/We_care_layout"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_weight="2"

                android:layout_marginTop="346dp"

                android:layout_toStartOf="@+id/user"
                android:background="@drawable/imastroke"
                android:src="@drawable/admin" />

            <ImageButton
                android:id="@+id/user"
                android:layout_width="172dp"
                android:layout_height="155dp"
                android:layout_below="@id/We_care_layout"
            android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="346dp"
               android:layout_weight="2"
                android:background="@drawable/imastroke"
                android:src="@drawable/profile" />


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
</RelativeLayout>