<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cc99a2"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"


        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/profileIM"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TittleInformation"
                android:text="Information"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-black"
                android:layout_toRightOf="@+id/profileIM"
                />
            <TextView
                android:id="@+id/idnumedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="Id Num"
                android:layout_below="@id/TittleInformation"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fIrstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_below="@id/idnumedit"
                android:layout_toRightOf="@+id/profileIM"
                android:text="FirstName"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/mIddleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fIrstName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="MiddleName:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lAstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mIddleName"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="LastName:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CONtact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lAstname"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="Contact number:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EMAilAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CONtact"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="Email:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SeX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EMAilAdd"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="Gender:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/StatuS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SeX"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="Status:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TypE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/StatuS"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="Type of Assistance:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TypE"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="Amount:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Amount"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="Date:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Sponsor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Date"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profileIM"
                android:text="Sponsor by:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Tittlenoted_by"
                android:text="Noted By:"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:textColor="#000000"
                android:layout_below="@+id/Sponsor"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-black"
                android:layout_toRightOf="@+id/profileIM"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/UDnoted_by"
                android:text="Brgy Officials"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="0dp"
                android:textColor="#000000"
                android:layout_below="@+id/Tittlenoted_by"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@+id/profileIM"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/UDnotedDate"
                android:text="Date"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@+id/UDnoted_by"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@+id/profileIM"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/UDTime"
                android:text="Time"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@+id/UDnotedDate"
                android:layout_marginLeft="0dp"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@+id/profileIM"
                />



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/UDTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/Update"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="2"
                    android:background="#b2ffb2"
                    android:src="@drawable/update"
                    />

                <ImageView
                    android:id="@+id/Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/delete"
                    android:background="#ff7f7f"
                    android:layout_weight="2"
                    />


            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</GridLayout>